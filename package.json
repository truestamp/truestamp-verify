{
  "name": "@truestamp/verify",
  "type": "module",
  "files": [
    "dist"
  ],
  "source": "src/index.ts",
  "main": "dist/index.cjs",
  "umd:main": "dist/index.umd.js",
  "module": "./dist/index.module.js",
  "unpkg": "./dist/index.umd.js",
  "jsdelivr": "./dist/index.umd.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "require": "./dist/index.cjs",
    "import": "./dist/index.module.js",
    "node": "./dist/index.cjs",
    "default": "./dist/index.module.js"
  },
  "scripts": {
    "clean": "rimraf dist && rimraf docs",
    "docs": "npx typedoc --plugin typedoc-plugin-extras --options typedoc.json src/index.ts",
    "docs-preview": "npx live-server docs",
    "package-check": "npx package-check",
    "build-web": "microbundle --target=web --tsconfig tsconfig.json --format es,umd,modern",
    "build-node": "microbundle --target=node --tsconfig tsconfig.json --format cjs",
    "build-local": "npm run package-check && npm run clean && npm run docs && npm run build-web && npm run build-node",
    "build": "npm run build-web && npm run build-node",
    "dev": "microbundle watch",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "test": "jest",
    "watch": "jest --watchAll"
  },
  "description": "A library for independent verification of Truestamp Commitments.",
  "keywords": [
    "crypto",
    "cryptography",
    "hash function",
    "hash",
    "hashing",
    "inclusion",
    "Merkle tree",
    "Merkle",
    "proof",
    "proofs",
    "root",
    "timestamp",
    "Truestamp",
    "validate",
    "validation",
    "verification",
    "verify"
  ],
  "version": "0.0.1",
  "homepage": "https://truestamp.github.io/truestamp-verify/",
  "author": "Truestamp <support@truestamp.com>",
  "repository": {
    "type": "git",
    "url": "git://github.com/truestamp/truestamp-verify.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@compodoc/live-server": "^1.2.3",
    "@skypack/package-check": "^0.2.2",
    "@stablelib/base64": "^1.0.1",
    "@stablelib/constant-time": "^1.0.1",
    "@stablelib/hex": "^1.0.1",
    "@truestamp/tree": "^0.0.13",
    "@truestamp/truestamp-id": "^1.1.2",
    "@types/jest": "^27.5.1",
    "@types/luxon": "^2.3.2",
    "@types/node": "^17.0.33",
    "@types/node-fetch": "^2.6.1",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-prettier": "^4.0.0",
    "isomorphic-unfetch": "^3.1.0",
    "jest": "^28.1.0",
    "luxon": "^2.4.0",
    "microbundle": "^0.15.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "superstruct": "^0.15.4",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "typedoc": "^0.22.15",
    "typedoc-plugin-extras": "^2.2.3",
    "typescript": "^4.6.4"
  }
}

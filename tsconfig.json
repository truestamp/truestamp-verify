{
  "compilerOptions": {
    "declaration": true,
    "target": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "lib",
    "noErrorTruncation": true
  },
  "include": [
    "src/**/*.ts"
  ],
}
